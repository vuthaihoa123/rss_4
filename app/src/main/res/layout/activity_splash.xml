<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white">

    <ImageView
        android:id="@+id/header_splash_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_header_splash_img"
        android:layout_alignParentTop="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_voice_of_america" />

    <ImageView
        android:id="@+id/footer_splash_img"
        android:layout_width="match_parent"
        android:layout_height="@dimen/width_footer_splash_img"
        android:layout_alignParentBottom="true"
        android:scaleType="fitCenter"
        android:src="@drawable/ic_breaking_news" />

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:background="@drawable/bg_rounded">

        <ProgressBar
            style="@style/Widget.AppCompat.Light.ActionMode.Inverse"
            android:layout_width="@dimen/width_progressbar"
            android:layout_height="@dimen/height_progressbar"
            android:layout_centerInParent="true"
            android:layout_margin="@dimen/layout_progressbar_margin" />
    </RelativeLayout>
</RelativeLayout>